<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.kevingt.bmicalc.AgeFragment">

    <ImageView
        android:id="@+id/logo_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        app:srcCompat="@drawable/bmi_logo" />

    <EditText
        android:id="@+id/name_label"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textColor="@android:color/white"
        android:textSize="30sp"

        android:gravity="center"
        android:layout_below="@+id/logo_icon"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/age_label"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:textSize="30sp"

        android:gravity="center"
        android:layout_below="@+id/logo_icon"
        android:layout_centerHorizontal="true" />



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/radio_gender"
        android:gravity="center"
        android:orientation="horizontal"
        android:divider="@drawable/ic_devider_line"
        android:showDividers="middle"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/redio_male"
            android:button="@drawable/radio_male"/>

        <RadioButton
            android:id="@+id/redio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_female" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your gender"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:layout_below="@+id/age_label"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textColor="@android:color/white"
        android:textSize="30sp"/>
    <TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/logo_icon"
        android:layout_marginTop="130dp"
    android:layout_centerHorizontal="true"
    android:text="Age"
    android:textColor="@android:color/white"
    android:textSize="30sp"/>

</RelativeLayout>
